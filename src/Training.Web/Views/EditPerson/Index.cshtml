@model IEnumerable<Training.Web.Entities.Person>

@{
    ViewBag.Title = "Index";

    ViewData["class" + ViewBag.Sort] = ViewBag.SortDirection;

    foreach (var propertyInfo  in Model.GetType().GetProperties())
    {
        ViewData["sort" + propertyInfo.Name] = "asc";
    }

    if (ViewBag.SortDirection == "asc")
    {
        ViewData["sort" + ViewBag.Sort] = "desc";
    }
}
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th class="@ViewBag.classAnrede">
            @Html.ActionLink(Html.DisplayNameFor(p => p.Anrede).ToString(),
                             "Index", new {property = "Anrede", direction = ViewBag.sortAnrede})
        </th>
        <th class="@ViewBag.classVorname">
            @Html.ActionLink(Html.DisplayNameFor(p => p.Vorname).ToString(),
                             "Index", new {property = "Vorname", direction = ViewBag.sortVorname})
        </th>
        <th class="@ViewBag.classNachname">
            @Html.ActionLink(Html.DisplayNameFor(p => p.Nachname).ToString(),
                             "Index", new {property = "Nachname", direction = ViewBag.sortNachname})
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Anrede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nachname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>